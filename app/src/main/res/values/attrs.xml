<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomView">
        <!--TEXT-->
        <attr name="android:title" format="string" />
        <attr name="android:text" format="string" />
        <attr name="android:hint" format="string" />
        <!--INPUT TYPE-->
        <attr name="android:textAllCaps" format="boolean" />
        <attr name="android:maxLength" format="integer" />
        <attr name="android:inputType" format="reference" />
        <attr name="android:imeOptions" format="reference" />
        <attr name="android:maxLines" format="integer" />
        <attr name="android:textStyle" format="integer" />
        <attr name="android:nextFocusForward" format="integer" />
        <!--COLOR-->
        <attr name="android:textColor" format="reference" />
        <attr name="android:textColorHint" format="reference" />
        <attr name="android:tint" format="integer" />
        <attr name="android:drawableTint" format="integer" />
        <attr name="android:backgroundTint" format="integer" />
        <!--DRAWABLE-->
        <attr name="android:src" format="reference" />
        <attr name="android:background" format="reference" />
        <attr name="android:drawableStart" format="reference" />
        <attr name="android:drawableEnd" format="reference" />
        <attr name="android:drawable" format="reference" />
        <!--CHECKABLE-->
        <attr name="android:checked" format="boolean" />
        <attr name="android:checkable" format="boolean" />
        <!--LAYOUT-->
        <attr name="android:gravity" format="reference" />
        <attr name="android:orientation" format="integer" />
        <attr name="android:radius" format="integer" />
        <!--PADDING-->
        <attr name="android:paddingStart" format="dimension" />
        <attr name="android:paddingEnd" format="dimension" />
        <attr name="android:paddingTop" format="dimension" />
        <attr name="android:paddingBottom" format="dimension" />
        <!--CUSTOM-->
        <attr name="input_button" format="string" />
        <attr name="input_title_visible" format="boolean" />
        <attr name="input_error_visible" format="boolean" />
        <attr name="input_hint" format="string"/>
        <!--CONFIG_ICON-->
        <attr name="back" format="boolean"/>
        <attr name="cancel" format="boolean"/>
        <attr name="hideAction" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="SwipeLayout">
        <attr name="swipeDirection" format="integer">
            <flag name="left" value="1"/>
            <flag name="right" value="2"/>
        </attr>
        <attr name="isEnabledSwipe" format="boolean"/>
        <attr name="isFreeDragAfterOpen" format="boolean"/>
        <attr name="isFreeHorizontalDrag" format="boolean"/>
        <attr name="isContinuousSwipe" format="boolean"/>
        <attr name="isTogether" format="boolean"/>
        <attr name="rightItem" format="reference"/>
        <attr name="leftItem" format="reference"/>
        <attr name="draggedItem" format="reference"/>
        <attr name="autoMovingSensitivity" format="integer"/>
        <attr name="rightDragViewPadding" format="dimension"/>
        <attr name="leftDragViewPadding" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="SquircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>

    <declare-styleable name="RoundedImageView">
        <attr name="riv_corner_radius" format="dimension" />
        <attr name="riv_corner_radius_top_left" format="dimension" />
        <attr name="riv_corner_radius_top_right" format="dimension" />
        <attr name="riv_corner_radius_bottom_left" format="dimension" />
        <attr name="riv_corner_radius_bottom_right" format="dimension" />
        <attr name="riv_border_width" format="dimension" />
        <attr name="riv_border_color" format="color" />
        <attr name="riv_mutate_background" format="boolean" />
        <attr name="riv_oval" format="boolean" />
        <attr name="android:scaleType" />
        <attr name="riv_tile_mode">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="riv_tile_mode_x">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="riv_tile_mode_y">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="RangeView">
        <attr name="range_min" format="integer" />
        <attr name="range_max" format="integer" />
        <attr name="range_step" format="integer" />
        <attr name="range_type" format="integer" />
        <attr name="range_unit" format="string" />
        <attr name="range_format" format="string" />
    </declare-styleable>

    <declare-styleable name="NoboButton">
        <attr name="nb_borderWidth" format="dimension" />
        <attr name="nb_borderColor" format="color" />
        <attr name="nb_radius" format="dimension" />
        <attr name="nb_backgroundColor" format="color" />
        <attr name="nb_disableColor" format="color" />
        <attr name="nb_focusColor" format="color" />
        <attr name="nb_enabled" format="boolean" />
        <attr name="nb_textColor" format="color" />
        <attr name="nb_disabledTextColor" format="color" />
        <attr name="nb_text" format="string" />
        <attr name="nb_textSize" format="dimension" />
        <attr name="nb_textAllCaps" format="reference|boolean" />
        <attr name="nb_startColor" format="color" />
        <attr name="nb_endColor" format="color" />
        <attr name="nb_angleGradient" format="integer"/>
        <attr name="nb_textStyle" format="integer">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="nb_fontIcon" format="string" />
        <attr name="nb_iconSize" format="dimension" />
        <attr name="nb_iconColor" format="color" />
        <attr name="nb_iconPosition" format="enum">
            <enum name="left" value="1" />
            <enum name="right" value="2" />
            <enum name="top" value="3" />
            <enum name="bottom" value="4" />
        </attr>
        <attr name="nb_drawableResource" format="reference" />
        <attr name="nb_iconPadding" format="dimension" />
        <attr name="nb_gravity" format="enum">
            <enum name="center" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
            <enum name="top" value="3" />
            <enum name="bottom" value="4" />
        </attr>
    </declare-styleable>

    <declare-styleable name="AppConstraintLayout">
        <attr name="radius" format="dimension" />
        <attr name="radiusTopLeft" format="dimension" />
        <attr name="radiusTopRight" format="dimension" />
        <attr name="radiusBottomLeft" format="dimension" />
        <attr name="radiusBottomRight" format="dimension" />
        <attr name="strokeLineColor" format="color" />
        <attr name="strokeLineWidth" format="dimension" />
        <attr name="dashLineWidth" format="dimension" />
        <attr name="dashLineGap" format="dimension" />
        <attr name="backgroundColor" format="color" />
    </declare-styleable>

</resources>