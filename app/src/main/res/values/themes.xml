<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestCorotine" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="App" />

    <!--THEMES VIEW-->
    <style name="View" />

    <style name="View.WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="View.MatchWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="View.MatchHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="View.MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--THEMES DIALOG-->
    <style name="TextView" parent="View.WrapContent">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/nexa_light</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.Text10">
        <item name="android:textSize">@dimen/text10</item>
    </style>

    <style name="TextView.Text12">
        <item name="android:textSize">@dimen/text12</item>
    </style>

    <style name="TextView.Text15">
        <item name="android:textSize">@dimen/text15</item>
    </style>

    <style name="TextView.Text18">
        <item name="android:textSize">@dimen/text18</item>
    </style>

    <style name="TextView.Text22">
        <item name="android:textSize">@dimen/text22</item>
    </style>

    <style name="TextView.Text25">
        <item name="android:textSize">@dimen/text25</item>
    </style>

    <style name="TextView.Text28">
        <item name="android:textSize">@dimen/text28</item>
    </style>

    <style name="TextView.Text35">
        <item name="android:textSize">@dimen/text35</item>
    </style>

    <!--THEMES DIALOG-->
    <style name="App.Dialog" />

    <style name="App.Dialog.Transparent">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="App.Dialog.FullScreen">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="App.Dialog.FullScreen.Transparent">
        <item name="android:backgroundDimEnabled">true</item>
    </style>


</resources>