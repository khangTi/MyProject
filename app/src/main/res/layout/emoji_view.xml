<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:maxHeight="339dp">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/emoji_view_emoji"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@null"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_emoji"
        app:layout_constraintEnd_toStartOf="@+id/emoji_view_sticker"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/emoji_view_sticker"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@null"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_sticker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/emoji_view_gif"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@null"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_gif"
        app:layout_constraintStart_toEndOf="@+id/emoji_view_sticker"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/emoji_view_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emoji_view_sticker" />

</androidx.constraintlayout.widget.ConstraintLayout>